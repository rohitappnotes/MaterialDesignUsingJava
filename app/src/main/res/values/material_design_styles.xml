    <!--cursor bubble-->
    <style name="CursorBubble" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/colorCursorBubble</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- hint padding from top (notes in filled box) -->
        <item name="boxCollapsedPaddingTop">0dp</item>

        <!-- box stroke -->
        <item name="boxStrokeColor">@color/outlined_box_text_input_layout</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1sdp</item>

        <!-- shape appearance-->
        <!-- <item name="shapeAppearance">@style/cornerCut_TextInputLayout</item>-->

        <!-- box corner -->
        <item name="boxCornerRadiusTopStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_4sdp</item>

        <!-- box background -->
        <item name="boxBackgroundColor">@color/boxBackgroundColor_TextInputLayout</item>

        <!--hint-->
        <item name="android:textColorHint">@color/hintInactiveColor_TextInputLayout</item>  <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="hintTextColor">@color/hintActiveColor_TextInputLayout</item> <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextAppearance">@style/HintTextAppearance</item>

        <!--prefix-->
        <item name="prefixTextColor">@color/prefixColor_TextInputLayout</item>
        <item name="prefixTextAppearance">@style/prefixTextAppearance</item>

        <!--placeholder-->
        <item name="placeholderTextColor">@color/placeholderColor_TextInputLayout</item>
        <item name="placeholderTextAppearance">@style/placeholderTextAppearance</item>

        <!--suffix-->
        <item name="suffixTextColor">@color/suffixColor_TextInputLayout</item>
        <item name="suffixTextAppearance">@style/suffixTextAppearance</item>

        <!--helper-->
        <item name="helperTextTextColor">@color/helperColor_TextInputLayout</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>

        <!--counter-->
        <item name="counterTextColor">@color/counterColor_TextInputLayout</item>
        <item name="counterTextAppearance">@style/CounterTextAppearance</item>

        <!--counter Overflow-->
        <item name="counterOverflowTextColor">@color/counterOverflowColor_TextInputLayout</item>  <!-- text counter color after more then maximum-->
        <item name="counterOverflowTextAppearance">@style/counterOverflowTextAppearance</item>

        <!--error-->
        <item name="boxStrokeErrorColor">@color/colorError</item> <!-- box border color -->
        <item name="errorTextColor">@color/colorError</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="errorIconTint">@color/colorError</item> <!-- error icon color -->

        <!--end icon-->
        <item name="endIconTint">@color/colorEndIcon_TextInputLayout</item>

        <!--start icon-->
        <item name="startIconTint">@color/colorStartIcon_TextInputLayout</item>

        <!--password icon-->
        <item name="passwordToggleTint">@color/colorStartIcon_TextInputLayout</item>

        <!--cursor bubble-->
        <item name="materialThemeOverlay">@style/CursorBubble</item>

<!--        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>-->
    </style>
