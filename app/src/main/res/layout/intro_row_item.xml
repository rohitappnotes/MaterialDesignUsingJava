<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/introRowItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/introImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_325sdp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/intro_one" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo" />
    </FrameLayout>

    <TextView
        android:id="@+id/introTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="@string/login_register_title_intro_one"
        android:textAppearance="@style/BoldFont14"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/introDescTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:includeFontPadding="false"
        android:justificationMode="inter_word"
        android:lineSpacingExtra="0dp"
        android:text="@string/login_register_desc_intro_one"
        android:textAppearance="@style/RegularFont8"
        android:textColor="@color/black" />
</LinearLayout>